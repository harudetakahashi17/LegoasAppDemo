@model List<AccountViewModel>
@{
    ViewData["Title"] = "Account List";
}

<div class="row">
    <div class="col-md-9 offset-md-1">
        <table class="table table-bordered">
            <thead>
                <tr class="text-center">
                    <th>Id</th>
                    <th>Account Name</th>
                    <th>Password</th>
                    <th>Created Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if(Model.Count == 0)
                {
                    <tr>
                        <td colspan="4" class="text-center">No Entry</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td align="center">@item.Id</td>
                            <td>@item.AccountName</td>
                            <td>@item.Password</td>
                            <td align="center">@item.CreatedDate</td>
                            <td align="center">
                                <a class="btn btn-sm btn-outline-primary">Edit</a> |
                                <a class="btn btn-sm btn-outline-primary">Detail</a> |
                                <a class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
